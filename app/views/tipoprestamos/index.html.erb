<h1>Tipos de Préstamos</h1>

<table border="1">
	<thead>
		<tr>
			<th>Id Tipo Préstamo</th>
			<th>Tipo Préstamo</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @tipoprestamos.each do |tp| %>
			<tr>
				<td><%= tp.id %></td>
				<td><%= tp.descripcion %></td>
				<td><%= link_to 'Ver', tp %></td>
				<td><%= link_to 'Editar', edit_tipoprestamo_path(tp) %></td>
				<td><%= link_to 'Eliminar', tp, method: :delete, data: { confirm: "Esta seguro? " } %></td>
			</tr>
		<% end %>		
	</tbody>
</table>

<%= link_to 'Nuevo Tipo de Préstamo', nuevotipoprestamo_path %>