<%= form_for (@nuevo_pais) do |f| %>
  <% if @nuevo_pais.errors.any? %>
      <div id="alert alert-danger">
        <h2><%= pluralize(@nuevo_pais.errors.count, "error") %> antes de guardar:</h2>
        <ul>
        <% @nuevo_pais.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="control-group">
  	<%= f.label :pais, class: "control-label" %>
    <div class="controls">
  	 <%= f.text_field :pais, class: "input-xlarge", required: true, placeholder: "Pais" %> 
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
  	 <%= f.submit 'Guardar', class: "btn btn-large btn-primary" %>
    </div>
  </div>

<% end %>
