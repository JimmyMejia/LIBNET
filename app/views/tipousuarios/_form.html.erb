<%= form_for(@nuevo_tipousuario) do |f| %>
	<% if @nuevo_tipousuario.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@nuevo_tipousuario.errors.count,"error") %> antes de guardar:</h2>
			<ul>
				<% @nuevo_tipousuario.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :descripcion %>
		<%= f.text_field :descripcion, { size: 30, maxlength: 50 } %>
	</div>

	<div class="actions">
		<%= f.submit 'Guardar' %>
	</div>

<% end %>