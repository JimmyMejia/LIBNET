<div class="container_table">
  <p>
    <h1>Lista de Usuarios</h1>
  </p>
  <div class="alert alert-success">
    <p><%= notice %></p>
  </div>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Tipo_usuario</th>
          <th>Identificación</th>
          <th>Nombre</th>
          <th>Dirección</th>
          <th>Teléfono</th>
          <th>Celular</th>
          <th>Fecha_registro</th>
          <th>Username</th>
          <th>Email</th>
          <th>Estado</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <td><%= usuario.tipousuario %></td>
            <td><%= usuario.identificacion %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.direccion %></td>
            <td><%= usuario.telefono %></td>
            <td><%= usuario.celular %></td>
            <td><%= usuario.fecharegistro %></td>
            <td><%= usuario.username %></td>
            <td><%= usuario.email %></td>
            <td><%= usuario.estado %></td>
            <td><%= link_to 'Ver', usuario, class: "btn btn-link" %></td>
            <td><%= link_to 'Editar', edit_usuario_path(usuario), class: "btn btn-link" %></td>
            <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Esta seguro?' } ,class: "btn btn-link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
   
    <%= link_to 'Nuevo Usuario', new_usuario_path, class: "btn btn-link" %>

</div>