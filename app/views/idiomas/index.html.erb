<h1>Lista de Idiomas</h1>

<table border="1">
	<thead>
		<tr>
			<th>Id Idioma</th>
			<th>Idioma</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @idiomas.each do |i| %>
			<tr>
				<td><%= i.id %></td>
				<td><%= i.idioma %></td>
				<td><%= link_to 'Ver', i %></td>
				<td><%= link_to 'Editar', edit_idioma_path(i)%></td>
				<td><%= link_to 'Eliminar', i, method: :delete, data: { confirm: "Esta seguro?" } %></td>
			</tr>
		<% end %>
	</tbody>

</table>
<br>
<%= link_to 'Nuevo Idioma', nuevoidioma_path %>